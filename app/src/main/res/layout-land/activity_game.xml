<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58407c"
    tools:context=".views.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/arrowBack"
                style="@style/button_style"
                android:layout_gravity="top"
                android:layout_margin="18dp"
                android:gravity="center"
                android:padding="200dp"
                android:src="@drawable/ic_arrow" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/audio_on"
                style="@style/button_style"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:padding="18dp"
                android:src="@drawable/ic_volume_off" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/audio_off"
                style="@style/button_style"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:padding="18dp"
                android:src="@drawable/ic_volume_on" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/shuffle"
                style="@style/button_style"
                android:layout_gravity="bottom"
                android:layout_margin="18dp"
                android:padding="18dp"
                android:src="@drawable/ic_refresh" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_margin="50dp"
                android:layout_gravity="top|center"
                android:background="@drawable/bg_button"
                android:clickable="false"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/font_pacifico"
                    android:text="  Moves  "
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_pacifico"
                    android:text="  0  "
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_margin="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_button"
                android:clickable="false"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/font_pacifico"
                    android:text="   Time "
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_pacifico"
                    android:text="  00:00  "
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom|center"
                android:layout_margin="18dp"
                android:background="@drawable/bg_button"
                android:clickable="false"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/font_pacifico"
                    android:text="   Best   "
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bestnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_pacifico"
                    android:text="  0  "
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>-->
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout style="@style/LinearLayout">

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />
                </LinearLayout>

                <LinearLayout style="@style/LinearLayout">

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />
                </LinearLayout>

                <LinearLayout style="@style/LinearLayout">

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />
                </LinearLayout>

                <LinearLayout style="@style/LinearLayout">

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />

                    <TextView style="@style/GameButtonsStyles" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>



    </LinearLayout>


</FrameLayout>