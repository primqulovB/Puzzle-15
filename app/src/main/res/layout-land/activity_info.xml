<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58407c"
    android:orientation="vertical"
    tools:context=".views.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/arrowBack"
            style="@style/button_style"
            android:layout_margin="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="18dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/font_pacifico"
            android:text=" Puzzle 15 "
            android:textColor="#fff"
            android:textSize="42sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nunito_black"
                    android:justificationMode="inter_word"
                    android:text="\tThe 15 puzzle is a sliding puzzle having 15 square tiles numbered 1–15 in a frame that is 4 tiles high and 4 tiles wide, leaving one unoccupied tile position. The goal of the puzzle is to place the tiles in numerical order. Named for the number of tiles in the frame, the 15 puzzle may also be called a 16 puzzle, alluding to its total tile capacity. Similar names are used for different sized variants of the 15 puzzle, such as the 8 puzzle that has 8 tiles in a 3×3 frame.\n\tThis program was developed by Primqulov Bahrom, a student of the GITA educational center, to gain practical skills."
                    android:textColor="#fff"
                    android:textSize="26sp"
                    android:textStyle="bold" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_2"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundimageview"/>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</LinearLayout>